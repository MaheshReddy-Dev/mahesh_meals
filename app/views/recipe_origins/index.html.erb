<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Recipe origins</h1>
    <%= link_to 'view meals', meals_path, class: "rounded-lg py-3 px-5 bg-red-600 text-white block font-medium" %>
    <%= link_to 'View meal recipes', meal_recipes_path, class: "rounded-lg py-3 px-5 bg-green-600 text-white block font-medium" %>
    <%= turbo_frame_tag "new_recipe_origin" do %>   
    <%= link_to 'New recipe origin', new_recipe_origin_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <% end %>
  </div>

  <div id="recipe_origins" class="min-w-full">
    <%= render @recipe_origins %>
  </div>
</div>
